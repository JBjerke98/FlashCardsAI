@{
    ViewData["Title"] = "Upload File";
}
<link rel="stylesheet" href="~/css/upload.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center bg-light p-4 rounded">
            <h2 class="mb-4">Upload a PDF or PowerPoint file</h2>

            <form asp-action="UploadFile" method="post" enctype="multipart/form-data" asp-controller="Upload" id="uploadForm">
                <div class="form-group mb-4">
                    <label for="uploadedFile" class="form-label">Choose a file (PDF or PowerPoint):</label>
                    <input type="file" name="uploadedFile" class="form-control" accept=".pdf, .pptx" />
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        </div>
        <!-- Loading-bar eller spinner -->
        <div id="loadingIndicator" style="display: none;">
            <div class="d-flex justify-content-center mt-5">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('uploadForm').addEventListener('submit', function() {
        // Vis loading-indikatoren n√•r skjemaet sendes
        document.getElementById('loadingIndicator').style.display = 'block';
    });
</script>