@model IEnumerable<FlashCardsAI.Models.Prompt>

<h2>Generated Flashcards</h2>

@if (Model != null && Model.Any())
{
    <div class="flashcard-container">
        @foreach (var prompt in Model)
        {
            <div class="flashcard">
                <div class="flashcard-inner">
                    <div class="flashcard-front">
                        <p>@prompt.Question</p>
                    </div>
                    <div class="flashcard-back">
                        <p>@prompt.Answer</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No flashcards generated. Please upload a valid file.</p>
}

<!-- CSS for flip-effekten -->
<style>
    .flashcard-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .flashcard {
        width: 300px;
        height: 200px;
        perspective: 1000px;
        cursor: pointer;
    }

    .flashcard-inner {
        position: relative;
        width: 100%;
        height: 100%;
        transition: transform 0.6s;
        transform-style: preserve-3d;
    }

    .flipped .flashcard-inner {
        transform: rotateY(180deg); /* Snur kortet ved klikk */
    }

    .flashcard-front, .flashcard-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .flashcard-front {
        background-color: #f8f9fa;
    }

    .flashcard-back {
        background-color: #007bff;
        color: white;
        transform: rotateY(180deg); /* Baksiden er rotert 180 grader */
    }
</style>

<!-- Flytt JavaScript til slutten av siden -->
<script>
    // Legger til klikk-hendelse for hvert kort
    document.addEventListener("DOMContentLoaded", function() {
        document.querySelectorAll('.flashcard').forEach(card => {
            card.addEventListener('click', function() {
                console.log("Kortet er klikket!");  // Debug melding
                this.classList.toggle('flipped'); // Legger til eller fjerner klassen "flipped" n√•r kortet klikkes
            });
        });
    });
</script>
