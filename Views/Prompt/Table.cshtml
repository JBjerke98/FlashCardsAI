@model IEnumerable<FlashCardsAI.Models.Prompt>

<link rel="stylesheet" href="/css/generateFlashcard.css">

<h2>Generated Flashcards</h2>
<!--Sjekker om modellen har fått tilsendt noe data -->
@if (Model != null && Model.Any())
{
    <!-- Genererer flashcards for hvert prompt-objekt (spørsmål og svar) -->
    <div class="flashcard-container">
        @foreach (var prompt in Model)
        {
            <div class="flashcard">
                <div class="flashcard-inner">
                    <div class="flashcard-front">
                        <p>@prompt.Question</p>
                    </div>
                    <div class="flashcard-back">
                        <p>@prompt.Answer</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No flashcards generated. Please upload a valid file.</p>
}



<script>
    // Legger til klikk-hendelse for hvert kort
    document.addEventListener("DOMContentLoaded", function() {
        document.querySelectorAll('.flashcard').forEach(card => {
            card.addEventListener('click', function() {
                console.log("Kortet er klikket!");  // Debug melding
                this.classList.toggle('flipped'); // Legger til eller fjerner klassen "flipped" når kortet klikkes
            });
        });
    });
</script>
